{
  "compilerOptions": {
    "target": "ES6",                          // Compiles to ES6 JavaScript
    "module": "commonjs",                     // Uses CommonJS module system
    "outDir": "./dist",                       // Output directory for compiled files
    "rootDir": "./",                          // Root directory for input files
    "strict": true,                           // Enable all strict type-checking options
    "esModuleInterop": true,                  // Enables emit interoperability between CommonJS and ES Modules
    "moduleResolution": "node",               // Use Node.js module resolution strategy
    "typeRoots": ["./node_modules/@types"],   // Location of type definitions
    "types": ["node", "express"]              // Included types for the project
  },
  "include": ["*.ts"],                         // Include all .ts files in the root directory
  "exclude": ["node_modules"]                  // Exclude node_modules folder
}